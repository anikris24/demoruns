<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:TabBarsDemo"
       x:Class="TabBarsDemo.AppShell">

    <TabBar>
        <ShellContent
            Title="Football"
            Icon="football.png"  ContentTemplate="{DataTemplate local:FootballScoresPage}" />

        <ShellContent
            Title="Basketball"
            Icon="basketball.png"
            ContentTemplate="{DataTemplate local:BasketballScoresPage}" />

        <ShellContent
            Title="Baseball"
            Icon="baseball.png"
            ContentTemplate="{DataTemplate local:BaseballScoresPage}" />
        
    </TabBar>
</Shell>
